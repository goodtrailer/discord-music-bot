{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "rules": {
        "indent": ["warn", 4],
        "brace-style": ["warn", "allman"],
        "curly": ["warn", "multi-or-nest", "consistent"],
        "no-console": "off",
        "nonblock-statement-body-position": ["warn", "below"],
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "no-plusplus": "off",
        "arrow-parens": ["warn", "as-needed"]
    }
}
